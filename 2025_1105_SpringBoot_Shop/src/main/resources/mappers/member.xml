<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.shop.dao.MemberDao">

	<select id="selectList" resultType="MemberVo">
		select * from member
	</select>
	
	
	<select id="selectOneIdx" parameterType="int" resultType="MemberVo">
		select *from member where mem_idx=#{mem_idx}
	</select>
	
	<select id="selectOneId" parameterType="String" resultType="MemberVo">
		select * from member where mem_id=#{mem_id}
	</select>
	
	<insert id="insert" parameterType="MemberVo">
		insert into member values(null
								 ,#{mem_name}
								 ,#{mem_id}
								 ,#{mem_pwd}
								 ,#{mem_email}
								 ,#{mem_zippcode}
								 ,#{mem_addr}
								 ,#{mem_ip}
								 ,now()
								 ,'일반'
								 )
	</insert>
	
	<delete id="delete" parameterType="int">
		delete from member where mem_idx=#{mem_idx}
	</delete>
	
	<update id="update" parameterType="MemberVo">
		update member set mem_name=#{mem_name}
						 ,mem_id=#{mem_id}
						 ,mem_pwd=#{mem_pwd}
						 ,mem_email=#{mem_email}
						 ,mem_zippcode=#{mem_zippcode}
						 ,mem_addr=#{mem_addr}
						 ,mem_grade=#{mem_grade}
						 ,mem_ip=#{mem_ip}
	  	where mem_idx=#{mem_idx}
	</update>
	
</mapper>












